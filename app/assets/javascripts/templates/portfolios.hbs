<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Portfolios ({{content.length}})
	</li>
      {{#each portfolio in controller}}
        {{view HelloEmber.PortfolioInListView contentBinding="portfolio"}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="span8">
	<h3> Portfolios {{#linkTo portfolios.new class='btn btn-mini btn-success' }}New Portfolio{{/linkTo}}</h3>

	{{outlet}}
	
	{{#each portfolio in controller}}

	
	{{#if portfolio.stocks}}
			<table class='table table-condensed table-striped table-bordered'>
			{{partial "stock_table_header"}}
	      {{#each stock in portfolio.stocks}}
			{{partial "stock"}}
	      {{/each}}
		<tr>
		<td></td>
		<td></td>
		<th style='text-align:right;'>Total</th>
		<td style='text-align:right;'>${{decimal portfolio.portfolio_value}}</td>
		<td></td>
		<td></td>
		<td></td>
		</tr>

		</table>

  {{/if}}
	{{/each}}
	
</div>


