<form class="form-horizontal">
  <legend>Stock</legend>

<div class="control-group">
<dl class="dl-horizontal">
	<dt>Symbol</dt>
	<dd><b>{{symbol}}</b></dd>
    <dt>Acquired:</dt>
    <dd>{{purchase_date}}</dd>
    <dt>Days Held:</dt>
    <dd>{{days_held}}</dd>
    <dt>Quantity:</dt>
    <dd>{{decimal quantity}}</dd>
    <dt>Price:</dt>
    <dd>${{purchase_price}}</dd>
    <dt>Cost:</dt>
    <dd>${{decimal position_cost}}</dd>			
    <dt>Belongs to:</dt>
    <dd>{{portfolio.name}} Portfolio</dd>
{{#if stock_or_option}}
{{else}}
	<h5>Option</h5>
	<dt>Type:</dt>
	<dd>{{stock_option}}</dd>			
	<dt>Strike:</dt>
	<dd>{{strike}}</dd>
{{/if}}	
		
</dl>
</div>

  <div class="form-actions">
	{{#linkTo "stocks.edit" content class="btn btn-mini btn-success"}}Edit{{/linkTo}}
	<button {{action cancel}} class='btn btn-mini'>Show All Stocks</button>
  </div>
</form>
