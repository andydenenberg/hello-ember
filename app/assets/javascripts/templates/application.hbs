<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">

		{{#if HelloEmber.logged_in_state }}
			{{#linkTo 'login' classNameBindings="view.login_button_class"}}<i class="icon-user"></i> 
			{{HelloEmber.logged_in_user}}{{/linkTo}}
			
			<ul class="nav pull-right">
					<button {{action refresh_daily_dividend}} class='btn'>Collect Dividends
					</button>

					<button {{action consolidate}}
					 		{{bindAttr class="view.consolidate_button_class"}}>
							{{HelloEmber.consolidating}}
					</button>
					
				<div class="btn-group">			
					<button {{action toggle_cache_auto}} 
							{{bindAttr class="view.toggle_cache_auto_class"}}>
							{{text_cache_auto HelloEmber.cache_auto}} 
								{{#if HelloEmber.cache_auto}} {{HelloEmber.cache_count}}
								{{/if}}
					</button>
					<button {{action refresh_cache}} {{bindAttr class="view.refresh_cache_button_class"}}>
					<i class="icon-forward"></i>
					</button>			
				</div>
				<div class="btn-group">			
					<button {{action toggle_repo_auto}}
					 		{{bindAttr class="view.toggle_repo_auto_class"}}>
							{{text_repo_auto HelloEmber.repo_auto}}
								{{#if HelloEmber.repo_auto}} {{HelloEmber.repo_count}}
							 	{{/if}}
					</button>
					<button {{action refresh_repo}} {{bindAttr class="view.refresh_repo_button_class"}}>
					<i class="icon-forward"></i>
					</button>
				</div>		
			  </ul>
		{{/if}}
    </div> <!--- <div class="container-fluid"> --->
  </div> <!--- <div class="navbar-inner"> --->
</div>

<div class="container-fluid" id="main">
  <div class="row-fluid">

    {{outlet}}

  </div>
</div>


